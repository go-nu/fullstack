{{>layouts/header}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>
<!--수정 링크 추가-->
<a href="/articles/{{id}}/edit" class="btn btn-primary">Edit</a>
<!--삭제 링크 추가-->
<a href="/articles/{{id}}/delete" class="btn btn-danger">Delete</a>
<a href="/articles">Go to Article List</a>
